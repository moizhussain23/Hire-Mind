# ===================================
# HIRE MIND - Environment Variables
# ===================================

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/hire-mind

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_WEBHOOK_SECRET=your_webhook_secret_here

# ===================================
# AI SERVICES (NEW)
# ===================================

# Google Gemini Pro (FREE - Question Generation, Scoring & TTS!)
# Get API key from: https://makersuite.google.com/app/apikey
# This single key provides:
# - AI question generation (1M tokens/month)
# - Interview scoring (1M tokens/month)  
# - Natural voice TTS (1M characters/month)
GEMINI_API_KEY=your_gemini_api_key_here

# ElevenLabs TTS (FREE - Backup Voice, NO CREDIT CARD!)
# Get API key from: https://elevenlabs.io/app/settings/api-keys
# Free tier: 10,000 characters/month
# Used as backup if Gemini TTS fails
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Groq API (FREE - Fallback AI)
# Get API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# ===================================
# STORAGE & MEDIA
# ===================================

# Cloudinary (FREE - Resume & Video Storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ===================================
# EMAIL SERVICE
# ===================================

# SendGrid (for email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@hiremind.com

# ===================================
# OPTIONAL SERVICES
# ===================================

# Sentry (Error Tracking - Optional)
SENTRY_DSN=your_sentry_dsn

# OpenAI (Optional - if you prefer GPT-4 over Gemini)
OPENAI_API_KEY=your_openai_api_key

# ===================================
# SECURITY
# ===================================

# JWT Secret (for additional auth if needed)
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
